{%- block translatable_content_widget -%}
    {%- if 'auto' == col -%}
        {%- set col = event_locales_count == 1 ? 6 : (event_locales_count > 3 or event_locales_count == 0 ? 4 : 12 / event_locales_count) -%}
    {%- endif -%}
    <div {% with {attr: row_attr|merge({class: (row_attr.class|default('') ~ ' row ')|trim})} %}{{ block('attributes') }}{% endwith %}>
        {% for child in form|filter(child => not child.rendered) %}
            {{- form_row(child, {col: col | default (12)}) -}}
        {% endfor %}
    </div>
{%- endblock translatable_content_widget -%}

{%- block translatable_content_entry_row -%}
    <div {% with {attr: row_attr|merge({class: (row_attr.class|default('') ~ ' col-' ~ col | default (12))|trim})} %}{{ block('attributes') }}{% endwith %}>
        <div class="input-group mr-sm-2">
            <div class="input-group-prepend">
                <div class="input-group-text">{{ label }}</div>
            </div>
            {{ form_widget(form) }}
        </div>
        {{ form_errors(form) }}
    </div>
{%- endblock translatable_content_entry_row -%}